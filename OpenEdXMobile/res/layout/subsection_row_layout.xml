<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants"
    >

    <com.github.vipulasri.timelineview.TimelineView
        android:id="@+id/subsection_timeline_marker"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:line="@color/edx_input_border_color"
        app:lineSize="0.5dp"
        app:markerSize="8dp"
        />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@id/subsection_timeline_marker"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/card_holder"
            android:layout_alignBottom="@id/card_holder"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="-6dp"
            >
            <android.support.v7.widget.CardView
                android:id="@+id/multiple_items_cv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="2dp"
                app:cardElevation="4dp"
                android:layout_margin="0.5dp"
                android:visibility="gone"
                />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/card_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            >
            <android.support.v7.widget.CardView
                android:id="@+id/subsection_row_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                app:cardCornerRadius="2dp"
                app:cardElevation="4dp"
                android:foreground="@drawable/course_outline_item_selector"

                >

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/block_container"
                        android:layout_width="0dp"
                        android:layout_height="75dp"
                        app:layout_constraintRight_toLeftOf="@+id/course_availability_status_icon"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"

                        >

                        <org.edx.mobile.view.custom.IconImageViewXml
                            android:id="@+id/block_type_icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:scaleType="center"
                            android:padding="10dp"
                            app:iconColor="@color/edx_brand_primary_base"
                            />
                        <RelativeLayout
                            android:id="@+id/title_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/block_type_icon"
                            android:layout_centerVertical="true"
                            android:paddingLeft="5dp"
                            >

                            <TextView
                                android:id="@+id/subsection_title_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="Title adiu aiudoi aioudoi iausdoi"
                                android:textColor="@color/description_text_color"
                                android:textSize="14sp"
                                android:maxLines="2"
                                android:ellipsize="end"
                                />

                            <TextView
                                android:id="@+id/subsection_desription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/subsection_title_tv"
                                android:layout_below="@+id/subsection_title_tv"
                                android:layout_marginBottom="6dp"
                                android:gravity="center_vertical"
                                android:paddingLeft="8dp"
                                android:text="Description"
                                android:textColor="@color/description_text_color"
                                android:textSize="12sp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                />
                        </RelativeLayout>
                    </RelativeLayout>

                    <org.edx.mobile.view.custom.IconImageViewXml
                        android:id="@+id/course_availability_status_icon"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="@color/edx_brand_primary_base"
                        android:scaleType="centerInside"
                        app:layout_constraintDimensionRatio="1:1"
                        android:padding="25dp"
                        app:iconColor="@color/white"
                        />

                    <!--<ImageButton-->
                    <!--android:id="@+id/subsection_status_icon"-->
                    <!--android:layout_width="50dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentTop="true"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:background="@android:color/transparent"-->
                    <!--android:src="@mipmap/ic_launcher" />-->

                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>
        </FrameLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>